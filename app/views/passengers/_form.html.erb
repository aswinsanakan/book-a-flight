
<%= form_for @passenger do |f| %>
	<div class="form-group">
		<%= f.label :name %>
		<%= f.text_field :name, autofocus: true, class: "form-control" %>	
	</div>

	<div class="form-group">
		<%= f.label :address %>
		<%= f.text_area :address, class: "form-control" %>	
	</div>
	
	<div class="actions">
		<%= f.submit "Create", class: "btn btn-success" %>	
	</div>
<%end%>

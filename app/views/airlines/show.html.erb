<% if @passenger.nil? %>
<h3>You have to create your passenger profile first!</h3>
	<a href="<%= new_passenger_path %>" class="btn btn-success">Create your Profile</a>
<%end%>

<h2><%= @airline.name %></h2>
<h4><%= @airline.flight_number %></h4>

<div class="row">
	<div class="col-md-4">
		<%= form_for @ticket do |f| %>
			<div class="form-group">
				<%= f.label "Choose date of journey :" %>
				<%= f.date_field :date_journey, autofocus: true, class: "form-control" %>	
			</div>

			<div class="form-group">
				<%= f.label "Choose class :" %>
				<%= f.select :travel_class, ["Gold", "Primary", "Business", "Economy"], class: "form-control" %>	
			</div>

			<%= f.hidden_field :airline_id, value: @airline.id %>
			
			<div class="actions">
				<%= f.submit "Book", class: "btn btn-info" %>	
			</div>
		<%end%>		
	</div>
</div>
